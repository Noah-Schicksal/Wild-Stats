<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WildStats" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f9db5c</item>
        <item name="colorPrimaryVariant">#f9db5c</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/cinza</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Custom Toolbar background -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <!-- Toolbar custom style -->
    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@drawable/background2</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/background2</item>
    </style>
</resources>
