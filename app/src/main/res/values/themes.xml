<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WildStats" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dourado</item>
        <item name="colorPrimaryVariant">@color/dourado</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Custom Toolbar background -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="Theme.WildStats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WildStats.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WildStats.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Toolbar custom style -->
    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@drawable/background2</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/background2</item>
    </style>
</resources>
