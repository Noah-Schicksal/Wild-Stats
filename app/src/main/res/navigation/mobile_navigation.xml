        android:label="@string/menu_tier"
        tools:layout="@layout/fragment_tier" />

    <fragment
        android:id="@+id/nav_runas"
        android:name="com.fallen.wildstats.ui.runas.RunasFragment"
        android:label="@string/menu_runas"
        tools:layout="@layout/fragment_runas" />

    <fragment
        android:id="@+id/nav_login"
        android:name="com.fallen.wildstats.ui.login.LoginFragment"
        android:label="@string/menu_login"
        tools:layout="@layout/fragment_login">

        <!-- Action para ir do Login para o Registro -->
        <action
            android:id="@+id/action_loginFragment_to_registroFragment"
            app:destination="@id/nav_registro" />
    </fragment>

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.fallen.wildstats.ui.telas.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/nav_registro"
